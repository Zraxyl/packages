pkgname=extra-cmake-modules
pkgver=6.5.0
pkgrel=1
arch=('x86_64')
durl=https://download.kde.org/stable/frameworks/6.5
depends=(cmake make)
makdedepends=(python3-sphinx python3-requests qt5 qt6)
source=("${durl}/${pkgname}-${pkgver}.tar.xz")

prepare() {
	# Patches are usually here
	echo ""
}

build() {
	cmake \
	-B build \
	-S $pkgname-$pkgver \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D BUILD_HTML_DOCS=OFF \
	-D BUILD_QTHELP_DOCS=OFF

	cmake --build build
}

package() {
	DESTDIR=$pkgdir cmake --install build
}
