pkgname=xfdesktop
pkgver=4.19.3
xver=4.19
pkgrel=1
arch=('x86_64')
depends=(exo libwnck libxdamage libnotify startup-notification garcon thunar)
makedepends=(gcc)
source=(https://archive.xfce.org/src/xfce/$pkgname/$xver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure \
	--prefix=/usr \
	--sysconfdir=/etc \
	--enable-thunarx \
	--disable-debug

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
