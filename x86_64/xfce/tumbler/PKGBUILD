pkgname=tumbler
pkgver=4.19.1
xver=4.19
pkgrel=1
arch=('x86_64')
depends=(glibc)
source=(https://archive.xfce.org/src/xfce/$pkgname/$xver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
