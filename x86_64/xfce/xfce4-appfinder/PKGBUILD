pkgname=xfce4-appfinder
pkgver=4.17.0
xver=4.17
pkgrel=1
arch=('x86_64')
depends=(garcon)
source=(https://archive.xfce.org/src/xfce/$pkgname/$xver/$pkgname-$pkgver.tar.bz2)

build() {
	cd $pkgname-$pkgver

	./configure		\
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
