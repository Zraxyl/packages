pkgname=xcb-util-renderutil
pkgver=0.3.10
pkgrel=1
pkgdesc="Convenience functions for the Render extension"
arch=('x86_64')
depends=(libxcb)
makedepends=(util-macros xorgproto)
source=(https://xcb.freedesktop.org/dist/${pkgname}-${pkgver}.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure \
	--prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
