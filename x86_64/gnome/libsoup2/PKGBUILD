pkgname=libsoup2
pkgver=2.74.3
pkgrel=1
arch=('x86_64')
depends=(glib-networking libpsl libxml2 sqlite3)
# We need clang here as gcc has issues with -R arg
makedepends=(clang llvm)
commitid=4a6b9178ded85e269872ffedfb2b18f2754a75d9
source=(git+https://gitlab.gnome.org/GNOME/libsoup.git#commit=$commitid)

build() {
	cd libsoup

	mkdir -p build && cd build

	CC=gcc \
	meson			\
	--prefix=/usr		\
	--buildtype=release	\
	-D vapi=enabled		\
	..

	ninja
}

package() {
	cd libsoup/build
	
	DESTDIR=$pkgdir ninja install
}
