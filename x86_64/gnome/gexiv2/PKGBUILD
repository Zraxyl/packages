pkgname=gexiv2
pkgver=0.14.3
pkgrel=1
pkgdesc="GObject-based wrapper around the Exiv2 library"
arch=(x86_64)
depends=(exiv2 glib2)
makedepends=(python3 vala meson gtk-doc)
source=(https://download.gnome.org/sources/$pkgname/0.14/$pkgname-$pkgver.tar.xz)

prepare() {
	cd $pkgname-$pkgver

	mkdir -p build
}

build() {
	cd $pkgname-$pkgver/build

	meson \
	--prefix=/usr \
	--buildtype=release \
	..

	ninja
}

package() {
	cd $pkgname-$pkgver/build

	DESTDIR=$pkgdir ninja install
}
