pkgname=gexiv2
pkgver=0.14.2
pkgrel=1
arch=(x86_64)
depends=(exiv2 vala)
makedepends=(python3 gtk-doc)
source=(https://download.gnome.org/sources/$pkgname/0.14/$pkgname-$pkgver.tar.xz)

prepare() {
	cd $pkgname-$pkgver

	mkdir -p build
}

build() {
	cd $pkgname-$pkgver/build

	meson \
	--prefix=/usr \
	--buildtype=release \
	..

	ninja
}

package() {
	cd $pkgname-$pkgver/build

	DESTDIR=$pkgdir ninja install
}
