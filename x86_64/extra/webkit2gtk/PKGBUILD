pkgname=webkit2gtk
pkgver=2.46.1
pkgrel=3
arch=('x86_64')
depends=(cairo gtk3+ gtk4+ icu libgudev libsecret libsoup libsoup2 libtasn1 libwebp mesa
	openjpeg ruby3 sqlite3 which wpebackend-fdo gobject-introspection
	hicolor-icon-theme libnotify gtk-doc harfbuzz wayland bubblewrap
	woff2 libavif unifdef xdg-dbus-proxy gst-plugins-bad)
makedepends=(cmake python3-pip)
source=(https://webkitgtk.org/releases/webkitgtk-$pkgver.tar.xz)

export PATH=~/.local/bin:$PATH

prepare() {
	rm -rf build build2
	mkdir -p build build2

	pip install setuptools

	pip install gi-docgen

	# webkitgtk 6.0
	cd $srcdir/build
	cmake \
	-D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D LIB_INSTALL_DIR=/usr/lib \
	-D CMAKE_SKIP_RPATH=ON \
	-D PORT=GTK \
	-D USE_LIBHYPHEN=OFF \
	-D USE_LIBBACKTRACE=OFF \
	-D USE_SYSTEM_SYSPROF_CAPTURE=NO \
	-D ENABLE_GAMEPAD=OFF \
	-D DBUS_PROXY_EXECUTABLE=/usr/bin/xdg-dbus-proxy \
	-D ENABLE_INTROSPECTION=ON \
	-D ENABLE_SPELLCHECK=OFF \
	-D ENABLE_MINIBROWSER=ON \
	-D ENABLE_WEB_RTC=ON \
	-D USE_GTK4=ON \
	-D USE_WOFF2=ON \
	-D USE_AVIF=ON \
	-D USE_JPEGXL=ON \
	-D USE_SOUP2=OFF \
	-D USE_LIBSECRET=ON \
	-D ENABLE_BUBBLEWRAP_SANDBOX=ON \
	-Wno-dev \
	-G Ninja \
	../webkitgtk-$pkgver

	# webkitgtk 4.1
	cd $srcdir/build2
	cmake \
	-D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D LIB_INSTALL_DIR=/usr/lib \
	-D CMAKE_SKIP_RPATH=ON \
	-D PORT=GTK \
	-D USE_LIBHYPHEN=OFF \
	-D USE_LIBBACKTRACE=OFF \
	-D USE_SYSTEM_SYSPROF_CAPTURE=NO \
	-D ENABLE_GAMEPAD=OFF \
	-D DBUS_PROXY_EXECUTABLE=/usr/bin/xdg-dbus-proxy \
	-D ENABLE_INTROSPECTION=ON \
	-D ENABLE_SPELLCHECK=OFF \
	-D ENABLE_MINIBROWSER=ON \
	-D ENABLE_WEB_RTC=ON \
	-D USE_GTK4=OFF \
	-D USE_WOFF2=ON \
	-D USE_AVIF=ON \
	-D USE_JPEGXL=ON \
	-D USE_SOUP2=OFF \
	-D USE_LIBSECRET=ON \
	-D ENABLE_BUBBLEWRAP_SANDBOX=ON \
	-Wno-dev \
	-G Ninja \
	../webkitgtk-$pkgver

}

build() {
	cd $srcdir/build
	ninja

	cd $srcdir/build2
	ninja
}

package() {
	cd $srcdir/build2
	DESTDIR=$pkgdir ninja install

	cd $srcdir/build
	DESTDIR=$pkgdir ninja install
}
