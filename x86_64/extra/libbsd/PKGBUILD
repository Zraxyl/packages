pkgname=libbsd
pkgver=0.12.2
pkgrel=1
arch=('x86_64')
depends=(glibc libmd)
makedepends=(gcc libmd)
source=(https://libbsd.freedesktop.org/releases/$pkgname-$pkgver.tar.xz)

build() {
	cd $pkgname-$pkgver

	./configure --prefix=/usr

	make
}

package() {
	cd $pkgname-$pkgver

	make DESTDIR=$pkgdir install
}
