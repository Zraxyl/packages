pkgname=spirv-llvm-translator
pkgver=18.1.4
pkgrel=1
arch=('x86_64')
depends=('llvm' 'glslang')
makedepends=('cmake' 'clang' 'python3' 'git' 'ninja')
source=("https://github.com/KhronosGroup/SPIRV-LLVM-Translator/archive/refs/tags/v$pkgver.tar.gz")

prepare() {
	rm -rf build && mkdir -p build
}

build() {
	cd build

	cmake \
	-G Ninja \
	-D CMAKE_INSTALL_PREFIX=/usr \
	-D CMAKE_INSTALL_LIBDIR=/usr/lib \
	-D CMAKE_BUILD_TYPE=Release \
	-D CMAKE_SHARED_LIBS=ON \
	-D CMAKE_SKIP_RPATH=ON \
	-D LLVM_INCLUDE_TESTS=OFF \
	-D LLVM_EXTERNAL_LIT=/usr/lib/lit \
	../SPIRV-LLVM-Translator-$pkgver

	ninja

	ninja llvm-spirv
}

package() {
	cd build
	mkdir -p $pkgdir/usr/bin

	DESTDIR=$pkgdir ninja install
	install -Dm755 tools/llvm-spirv/llvm-spirv $pkgdir/usr/bin/llvm-spirv
}
